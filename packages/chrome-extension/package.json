{
  "name": "@squashai/chrome-extension",
  "private": true,
  "version": "0.0.0",
  "author": "tooniez",
  "license": "MIT",
  "description": "A modern, TypeScript-powered Chrome extension starter with React and Shadcn/UI",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:inject\" \"npm run dev:crx\"",
    "dev:crx": "vite --clearScreen false --port 5174",
    "dev:inject": "vite build --watch --config vite.config.inject.ts --clearScreen false",
    "build": "pnpm build:inject && pnpm build:crx",
    "build:crx": "vite build --clearScreen false --emptyOutDir false",
    "build:inject": "vite build --clearScreen false --config vite.config.inject.ts"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@squashai/replicator": "workspace:*",
    "@tailwindcss/vite": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.3",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.5",
    "uuid": "^11.1.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@types/chrome": "^0.1.3",
    "@types/node": "^22.8.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-reconciler": "^0.32.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}
