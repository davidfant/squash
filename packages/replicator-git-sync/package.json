{
  "name": "@hypershape-ai/replicator-git-sync",
  "type": "module",
  "version": "0.0.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:tsx\" \"pnpm dev:tsc\"",
    "dev:tsx": "tsx --watch --env-file=.env src/index.ts",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "deploy": "wrangler deploy",
    "build": "tsc -b"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@hono/node-server": "^1.18.1",
    "@hono/zod-validator": "^0.7.1",
    "hono": "^4.8.4",
    "simple-git": "^3.28.0",
    "tar": "^7.4.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3"
  }
}
