{
  "name": "@squash/api",
  "type": "module",
  "version": "0.0.2",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lib/resolveMessageThreadHistory": {
      "types": "./dist/lib/resolveMessageThreadHistory.d.ts",
      "default": "./dist/lib/resolveMessageThreadHistory.js"
    },
    "./agent/types": {
      "types": "./dist/agent/types.d.ts",
      "default": "./dist/agent/types.js"
    }
  },
  "scripts": {
    "dev": "pnpm typegen && concurrently \"pnpm dev:wrangler\" \"pnpm dev:tsc\"",
    "dev:wrangler": "wrangler dev --x-remote-bindings",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "drizzle:migrate:dev": "drizzle-kit push",
    "drizzle:migrate:prod": "DOTENV_CONFIG_PATH=.dev.vars.prod drizzle-kit migrate",
    "push": "wrangler deploy --minify --env production",
    "build": "tsc -b",
    "typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/openai": "^2.0.3",
    "@hono/zod-validator": "^0.7.1",
    "@neondatabase/serverless": "^1.0.1",
    "@octokit/auth-app": "^8.0.2",
    "@octokit/rest": "^22.0.0",
    "@opentelemetry/context-async-hooks": "^2.0.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@squash/ai-sdk-claude-code": "workspace:*",
    "@squash/flyio-ssh-proxy": "workspace:*",
    "@squash/replicator": "workspace:*",
    "@squash/replicator-git-sync": "workspace:*",
    "ai": "^5.0.5",
    "aws4fetch": "^1.0.20",
    "better-auth": "^1.2.12",
    "drizzle-orm": "^0.44.2",
    "eventsource-parser": "^3.0.5",
    "hono": "^4.9.0",
    "jsonwebtoken": "^9.0.2",
    "langsmith": "^0.3.53",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.upperfirst": "^4.3.1",
    "nanotar": "^0.2.0",
    "zod": "^4.0.16"
  },
  "devDependencies": {
    "@types/lodash.camelcase": "^4.3.9",
    "@types/lodash.kebabcase": "^4.1.9",
    "@types/lodash.upperfirst": "^4.3.9",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.0",
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.31.0"
  }
}
